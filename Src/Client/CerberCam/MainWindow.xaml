<Window x:Class="CerberCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CerberCam"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="EmailBox" Text="{Binding Email}" BorderBrush="Red" Width="300" Height="50" VerticalAlignment="Top" FontSize="20" TextAlignment="Center"/>
        <Button Command="{Binding SendCommand}" Width="100" Height="100" Content="Take a picture and recognise!"/>

    </Grid>
</Window>
